<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.username">java</property>
		<property name="hibernate.connection.password">java</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:34304/postgres</property>

		<property name="hibernate.current_session_context_class">thread</property>

		<property name="connection_pool_size">1</property><!-- TODO : probablemet supprimer -->

		<property name="hbm2ddl.auto">none</property>

		<property name="show_sql">true</property>

		<!-- <mapping class="org.javabrains.sanjaya.dto.UserDetails" /> -->

	</session-factory>
</hibernate-configuration>